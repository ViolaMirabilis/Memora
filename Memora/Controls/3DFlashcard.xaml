<UserControl x:Class="Memora.Controls._3DFlashcard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.Controls"
             mc:Ignorable="d"
             Focusable="True">
    
    <!-- RenderTransformOrigin set to 0.5, 0.5 so the center is in the middle of the grid (flashcarD). If it's set to "1", the "center" point is on the right edge.-->
    <Grid Width="300"
          Height="450"
          RenderTransformOrigin="0.5,0.5"
          Cursor="Hand"
          Background="Transparent">

        <Grid.RenderTransform>
            <ScaleTransform x:Name="FlashcardRotate" ScaleX="1"/>
        </Grid.RenderTransform>

            <Rectangle Fill="#4F46E5" Height="440" Width="290"/>
        
        <Border x:Name="FrontSide"
                Background="Transparent"
                BorderThickness="7"
                BorderBrush="#6366F1"
                CornerRadius="7"
                Cursor="Hand">

            <TextBlock Text="{Binding FrontText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        FontSize="24"
                        Foreground="#FAFBFC"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                        TextAlignment="Justify"
                        Margin="10"
                        IsHitTestVisible="False">
            </TextBlock>
        </Border>

        <Border x:Name="BackSide"
                Background="Transparent"
                BorderThickness="7"
                BorderBrush="#6366F1"
                CornerRadius="7"
                Cursor="Hand"
                Visibility="Collapsed">

            <TextBlock Text="{Binding BackText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    FontSize="24"
                    Foreground="#FAFBFC"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap"
                    TextAlignment="Justify"
                    Margin="10"
                    IsHitTestVisible="False">
            </TextBlock>

        </Border>

    </Grid>
   
</UserControl>
