<UserControl x:Class="Memora.Controls._3DFlashcard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.Controls"
             mc:Ignorable="d" >
    
    <Grid Width="300" Height="450" RenderTransformOrigin="0.5,0.5">

        <Grid.RenderTransform>
            <RotateTransform x:Name="FlashcardRotate" Angle="0"/>
        </Grid.RenderTransform>

        <Border x:Name="FrontSide"
                Background="#4F46E5"
                BorderThickness="7"
                BorderBrush="#6366F1"
                CornerRadius="10"
                Cursor="Hand">

            <TextBlock Text="This is a test of my flashcard, which should display the content incely in the middle and flip the card if needed."
                FontSize="24"
                Foreground="#FAFBFC"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextWrapping="Wrap"
                TextAlignment="Justify"
                Margin="10">

            </TextBlock>


        </Border>


        <Border x:Name="BackSide"
                Background="Gray"
                BorderThickness="7"
                BorderBrush="DarkGray"
                CornerRadius="10"
                Cursor="Hand">

            <TextBlock Text="BACK"
                        FontSize="24"
                        Foreground="#FAFBFC"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextWrapping="Wrap"
                        TextAlignment="Justify"
                        Margin="10">

            </TextBlock>


        </Border>



    </Grid>
   
</UserControl>
