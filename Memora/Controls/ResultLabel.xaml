<UserControl x:Class="Memora.Controls.ResultLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.Controls"
             mc:Ignorable="d"
             x:Name="Result">
    <Grid>
        <Border Background="{Binding BorderBackground, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CornerRadius="10"
                BorderThickness="2,0,0,2"
                BorderBrush="{Binding LeftShade, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Margin="10">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            FontSize="18"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="10,5,10,5"
                            Foreground="{Binding TextColor, RelativeSource={RelativeSource AncestorType=UserControl}}">
                </TextBlock>

                <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,5,10,5"
                           Foreground="{Binding TextColor, RelativeSource={RelativeSource AncestorType=UserControl}}">
                </TextBlock>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
