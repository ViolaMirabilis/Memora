<UserControl x:Class="Memora.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Border Height="400"
                Width="400"
                CornerRadius="25"
                Background="#FFFFFF"
                BorderBrush="#DEE2E6"
                BorderThickness="2">
            
            <StackPanel Orientation="Vertical">
                <Label Content="Memora Login"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#6366F1"
                       HorizontalAlignment="Center"
                       Margin="10">
                </Label>

                <Label Content="Email"
                   FontSize="20"
                   FontWeight="Medium"
                   Foreground="#6366F1"
                   HorizontalAlignment="Left"
                   Margin="25,1,25,1">
                </Label>
                <TextBox Height="50"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center"
                         FontSize="28"
                         FontWeight="Medium"
                         Foreground="#2C3E50"
                         Background="#FAFBFC"
                         BorderThickness="2"
                         BorderBrush="#818CF8"
                         Margin="25,1,25,10"
                         Text="{Binding Username}">
                </TextBox>

                <Label Content="Password"
                       FontSize="20"
                       FontWeight="Medium"
                       Foreground="#6366F1"
                       HorizontalAlignment="Left"
                       Margin="25,10,25,1">
                </Label>
                <TextBox Height="50"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center"
                         FontSize="28"
                         FontWeight="Medium"
                         Foreground="#2C3E50"
                         Background="#FAFBFC"
                         BorderThickness="2"
                         BorderBrush="#818CF8"
                         Margin="25,1,25,1"
                         Text="{Binding Password}">
                </TextBox>

                <Button Content="Login"
                        Foreground="#FAFBFC"
                        FontSize="24"
                        FontWeight="Medium"
                        Margin="0,15,0,5"
                        Command="{Binding LoginCommand}">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="Background" Value="#4F46E5"/> 
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#818CF8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="55"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>

                    </Button.Template>
                </Button>

                <Button Content="Don't have an account? Click here to register!"
                        HorizontalAlignment="Center"
                        Foreground="#2C3E50"
                        FontWeight="Light"
                        FontSize="14"
                        Margin="0,15,0,0"
                        Cursor="Hand"
                        Command="{Binding NavigateRegisterCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter />
                        </ControlTemplate>
                    </Button.Template>
                    
                </Button>
                
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
