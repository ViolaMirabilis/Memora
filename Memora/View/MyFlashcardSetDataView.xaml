<UserControl x:Class="Memora.View.MyFlashcardSetDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.View"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:placeholder="clr-namespace:Memora.Design"
             d:DataContext="{d:DesignInstance Type=placeholder:MyFlashcardSetDataDesign, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" >
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/StudyModeButton.xaml"/>
                <ResourceDictionary Source="/Themes/GeneralConfirmButton.xaml"/>
                <ResourceDictionary Source="/Themes/PlusButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>



    <Grid>

        <Border
            BorderBrush="#DEE2E6"
            BorderThickness="2"
            CornerRadius="10"
            Margin="10"
            Background="#FFFFFF">
        </Border>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="10">

            <Label Content="{Binding FlashcardsCount}"
                    FontWeight="Bold"
                    FontSize="18"
                    Foreground="#2C3E50">
            </Label>
            <Label 
                    Content="total entries "
                    FontWeight="Bold"
                    FontSize="18"
                    Foreground="#2C3E50">
            </Label>

        </StackPanel>


<!-- Horizontal Stackpanel for individual flashcards and study modes-->
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="20,40,20,20">

            <!-- border around the flashcards -->
            <Border
                BorderBrush="#DEE2E6"
                BorderThickness="2"
                CornerRadius="10"
                Background="#FAFBFC">
                <ListView
                    x:Name="FlashcardList" 
                    ItemsSource="{Binding Flashcards}"
                    Background="Transparent"
                    BorderThickness="0"
                    Height="auto"
                    Width="auto"
                    Margin="15,15,15,15"
                    HorizontalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    ItemContainerStyle="{StaticResource FlashcardDataDesign}"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                </ListView>
            </Border>


            <StackPanel 
                Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="15,0,0,0">

                <Border
                        Background="#FAFBFC"
                        CornerRadius="10"
                        VerticalAlignment="Center"
                        BorderThickness="2"
                        BorderBrush="#DEE2E6"
                        Margin="10,10,10,10"
                        Padding="10">

                    <StackPanel Orientation="Vertical">
                        <Label Content="Studying modes"
                               Foreground="#2C3E50"
                               FontSize="28"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Margin="10"></Label>

                        <Button Content="Revision"
                                Style="{StaticResource StudyModeButton}"
                                Tag="{x:Static iconPacks:PackIconBootstrapIconsKind.Book}"
                                Command="{Binding NavigateHomeCommand}"
                                Margin="5"/>

                        <Button Content="Quiz"
                                Style="{StaticResource StudyModeButton}"
                                Tag="{x:Static iconPacks:PackIconBootstrapIconsKind.PatchQuestion}"
                                Command="{Binding NavigateHomeCommand}"
                                Margin="5"/>

                        <Button Content="Typing quiz"
                                Style="{StaticResource StudyModeButton}"
                                Tag="{x:Static iconPacks:PackIconBootstrapIconsKind.Keyboard}"
                                Command="{Binding NavigateHomeCommand}"
                                Margin="5"/>
                    </StackPanel>
                </Border>



                <Label Content="Add a new flashcard"
                       Foreground="#2C3E50"
                       FontSize="22"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="10"></Label>
                <!-- add flashcard button-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="+"
                            Style="{StaticResource PlusButton}"
                            Command="{Binding AddFlashcardCommand}"
                            Margin="10"/>

                    <Button Content="Save changes"
                            Style="{StaticResource GeneralConfirmButton}"
                            Command="{Binding AddFlashcardCommand}"
                            FontSize="18"
                            FontWeight="Regular"/>
                </StackPanel>
                

            </StackPanel>
            
            
        </StackPanel>


    </Grid>
</UserControl>
