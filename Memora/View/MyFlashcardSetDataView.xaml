<UserControl x:Class="Memora.View.MyFlashcardSetDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.View"
             xmlns:placeholder="clr-namespace:Memora.Design"
             d:DataContext="{d:DesignInstance Type=placeholder:MyFlashcardSetDataDesign, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.9*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
           Content="Flashcard Data"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           FontSize="35"
           FontFamily="Sans Serif Collection"
           FontWeight="SemiBold"
           Foreground="#6366F1">
        </Label>


        <Border
            Grid.Row="1"
            BorderBrush="#DEE2E6"
            BorderThickness="2"
            CornerRadius="4"
            Background="#FFFFFF">
        </Border>

        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center">

            <ListView
            x:Name="FlashcardList" 
            ItemsSource="{Binding Flashcards}"
            Background="Transparent"
            BorderThickness="0"
            Height="auto"
            Width="auto"
            Margin="15"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            ItemContainerStyle="{StaticResource FlashcardDataDesign}"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.VerticalScrollBarVisibility="Hidden"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>

            <Border Grid.Column="1"
            Background="#6366F1"
            CornerRadius="4"
            BorderThickness="2"
            BorderBrush="#DEE2E6"
            Margin="10"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Padding="50">

                <StackPanel Orientation="Vertical">
                    <Label Content="Modes"
                           Foreground="#FAFBFC"
                           FontSize="38"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="10"></Label>
                    <Button Height="50" Width="100" Margin="10" Content="Test"></Button>
                    <Button Height="50" Width="100" Margin="10" Content="Revise"></Button>
                    <Button Height="50" Width="100" Margin="10" Content="Typing test"></Button>

                </StackPanel>
            </Border>


        </StackPanel>
        

    </Grid>
</UserControl>
