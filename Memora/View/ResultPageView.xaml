<UserControl x:Class="Memora.View.ResultPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.View"
             mc:Ignorable="d" >
    <Grid>
        <!-- border around the result -->
        <Border BorderBrush="#DEE2E6"
                BorderThickness="2"
                CornerRadius="10"
                Background="#FAFBFC">
        </Border>

        <Border BorderThickness="4"
                BorderBrush="Yellow"
                Height="auto"
                Width="auto">
            <StackPanel
            Orientation="Vertical"
            HorizontalAlignment="Center"
            Margin="20,40,20,20">


            <TextBlock Text="Results"
            FontSize="64"
                       FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="10"
            Foreground="#2C3E50">
            </TextBlock>

                <TextBlock Text="{Binding TotalAnswers}"
                FontSize="48"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="10"
                Foreground="#2C3E50">
            </TextBlock>

            <TextBlock Text="Incorrect answers: 17"
                FontSize="48"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="10"
                Foreground="#2C3E50">
            </TextBlock>

            <TextBlock Text="Total questions: 49"
            FontSize="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="10"
            Foreground="#2C3E50">
            </TextBlock>

            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
