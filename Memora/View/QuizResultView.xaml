<UserControl x:Class="Memora.View.QuizResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Memora.View"
             xmlns:controls="clr-namespace:Memora.Controls"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/SmallSquareButton.xaml"/>
                <ResourceDictionary Source="/Themes/StudyModeButton.xaml"/>
                <ResourceDictionary Source="/Themes/AnimatedGrid.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <!-- @see https://stackoverflow.com/questions/51803869/wpf-animation-how-do-i-make-it-slide-in for more info.-->
        <!-- Empty grid around the border with content. Starts with opacity 0. -->
        <Grid Style="{StaticResource FadeInGrid}">
            <!-- border around the entire window -->
            <Border BorderBrush="#DEE2E6"
                BorderThickness="2"
                CornerRadius="10"
                Margin="10"
                Background="#E8EAEE">
                <Border>

                </Border>
            </Border>

            <!-- Grid holding both borders together -->
            <Grid>
                <Border Height="400"
                    Width="400"
                    CornerRadius="10"
                    Background="#E8EAEE">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="4"
                                      Direction="20"
                                      Color="Black"
                                      Opacity="0.5"
                                      BlurRadius="6">
                        </DropShadowEffect>
                    </Border.Effect>

                </Border>
                <!-- Border around the results -->
                <Border Background="#FFFFFF"
                    CornerRadius="10"
                    VerticalAlignment="Center"
                    BorderThickness="2"
                    BorderBrush="#DEE2E6"
                    Margin="10,10,10,10"
                    Padding="10"
                    Height="auto"
                    Width="400">


                    <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            Margin="10"
                            Width="auto"
                            Height="auto">

                        <!-- Results banner -->
                        <TextBlock Text="RESULTS"
                                FontSize="64"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="10"
                                Foreground="#2C3E50">

                        </TextBlock>

                        <!-- Total Questions-->
                        <controls:ResultLabel LeftShade="#2563EB"
                                          BorderBackground="#3B82F6"
                                          Label="Total questions: "
                                          Text="{Binding TotalQuestions}"
                                          TextColor="#2C3E50">
                        </controls:ResultLabel>


                        <!-- Correct answers -->
                        <controls:ResultLabel LeftShade="#0FBD3B"
                                          BorderBackground="#68F38B"
                                          Label="Correct answers: "
                                          Text="{Binding CorrectAnswers}"
                                          TextColor="#2C3E50">
                        </controls:ResultLabel>

                        <!-- Incorrect answers -->
                        <controls:ResultLabel LeftShade="#E32626"
                                              BorderBackground="#E84A4A"
                                              Label="Incorrect answers: "
                                              Text="{Binding IncorrectAnswers}"
                                              TextColor="#2C3E50">
                        </controls:ResultLabel>

                        <TextBlock Text="Want to revise again?"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,10,10,10"
                               Foreground="#2C3E50">

                        </TextBlock>
                        <!-- buttons-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Replay" 
                                Style="{StaticResource StudyModeButton}"
                                Tag="{x:Static iconPacks:PackIconBootstrapIconsKind.ArrowClockwise}"
                                Command="{Binding NavigateQuizModeCommand}"
                                Height="45"
                                Width="100"
                                Margin="10"/>

                            <Button Content="Shuffle"
                                Style="{StaticResource StudyModeButton}"
                                Tag="{x:Static iconPacks:PackIconBootstrapIconsKind.Shuffle}"
                                Command="{Binding NavigateRevisionModeCommand}"
                                Height="45"
                                Width="100"
                                FontSize="14"
                                Margin="10"/>
                        </StackPanel>


                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
