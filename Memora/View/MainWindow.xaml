<Window x:Class="Memora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memora"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366"
        Background="#6A5BFF">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Width="400" HorizontalAlignment="Center" CornerRadius="10" Background="#6A5BEF"></Border>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button HorizontalAlignment="Left" Content="Home" FontSize="28" Foreground="WhiteSmoke" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateHomeCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Flashcards" FontSize="28" Foreground="WhiteSmoke" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateMyFlashcardsCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Folders" FontSize="28" Foreground="WhiteSmoke" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateMyFoldersCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Profile" FontSize="28" Foreground="WhiteSmoke" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateMyProfileCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Settings" FontSize="28" Foreground="WhiteSmoke" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateSettingsCommand}"></Button>
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding Navigation.CurrentView}">
            
        </ContentControl>
        
    </Grid>
</Window>
