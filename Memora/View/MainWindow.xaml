<Window x:Class="Memora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memora"
        mc:Ignorable="d"
        Title="Memora" Height="768" Width="1366"
        Background="#FAFBFC">

    <!-- needed to use the Themes folder and button styles-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/HomeButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" HorizontalAlignment="Right" CornerRadius="10" Background="#FFFFFF" BorderBrush="#DEE2E6" BorderThickness="1"></Border>
        <Label Content="Memora" Foreground="#6366F1" FontSize="38" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold"></Label>
        <StackPanel Orientation="Vertical" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Home"
                    Style="{StaticResource HomeNavigationButton}"
                    Command="{Binding NavigateHomeCommand}"
                    Margin="3"/>
            <Button Content="Flashcards"
                    Style="{StaticResource HomeNavigationButton}"
                    Command="{Binding NavigateMyFlashcardsCommand}"
                    Margin="3"/>
            <Button Content="Folders"
                    Style="{StaticResource HomeNavigationButton}"
                    Command="{Binding NavigateMyFoldersCommand}"
                    Margin="3"/>
            <Button Content="Profile"
                    Style="{StaticResource HomeNavigationButton}"
                    Command="{Binding NavigateMyProfileCommand}"
                    Margin="3"/>
            <Button Content="Settings"
                    Style="{StaticResource HomeNavigationButton}"
                    Command="{Binding NavigateSettingsCommand}"
                    Margin="3"/>
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding Navigation.CurrentView}">
            
        </ContentControl>
        
    </Grid>
</Window>
