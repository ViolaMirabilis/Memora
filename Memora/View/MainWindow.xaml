<Window x:Class="Memora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memora"
        mc:Ignorable="d"
        Title="Memora" Height="768" Width="1366"
        Background="#FAFBFC">

    <!-- needed to use the Themes folder and button styles-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/HomeButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        
        <Rectangle Grid.Column="1" Height="500" Width="500">
            <Rectangle.Fill>
                <RadialGradientBrush 
                GradientOrigin="0.5,0.5" 
                Center="0.3,0.5" RadiusX="0.7" RadiusY="0.7">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="#6366F1" Offset="0" />
                        <GradientStop Color="#818CF8" Offset="1" />
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Grid.Column="1" HorizontalAlignment="Left" BorderBrush="#DEE2E6" BorderThickness="1"/>

        

        <Border Grid.Column="0" Background="#6366F1">
            <StackPanel VerticalAlignment="Center">
                <Button Content="Home"
                        Style="{StaticResource HomeNavigationButton}"
                        Command="{Binding NavigateHomeCommand}"
                        Margin="3"/>
                <Button Content="Flashcards"
                        Style="{StaticResource HomeNavigationButton}"
                        Command="{Binding NavigateMyFlashcardsCommand}"
                        Margin="3"/>
                <Button Content="Folders"
                        Style="{StaticResource HomeNavigationButton}"
                        Command="{Binding NavigateMyFoldersCommand}"
                        Margin="3"/>
                <Button Content="Profile"
                        Style="{StaticResource HomeNavigationButton}"
                        Command="{Binding NavigateMyProfileCommand}"
                        Margin="3"/>
                <Button Content="Settings"
                        Style="{StaticResource HomeNavigationButton}"
                        Command="{Binding NavigateSettingsCommand}"
                        Margin="3"/>

                
            </StackPanel>
        </Border>
        <Label Content="Memora" Margin="0,20,0,0" Foreground="#FAFBFC" FontSize="38" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold"></Label>
        
        <ContentControl Grid.Column="1" Content="{Binding Navigation.CurrentView}">
            
        </ContentControl>
        
    </Grid>
</Window>
