<Window x:Class="Memora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memora"
        mc:Ignorable="d"
        Title="Memora" Height="768" Width="1366"
        Background="#FAFBFC">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" HorizontalAlignment="Right" CornerRadius="10" Background="#FFFFFF" BorderBrush="#DEE2E6" BorderThickness="1"></Border>
        <Label Content="Memora" Foreground="#6366F1" FontSize="38" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold"></Label>
        <StackPanel Orientation="Vertical" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Home" Width="130" FontSize="26" Foreground="#6366F1" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateHomeCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Flashcards" Width="130" FontSize="26" Foreground="#6366F1" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateMyFlashcardsCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Folders" Width="130" FontSize="26" Foreground="#6366F1" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateMyFoldersCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Profile" Width="130" FontSize="26" Foreground="#6366F1" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateMyProfileCommand}"></Button>
            <Button HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Settings" Width="130" FontSize="26" Foreground="#6366F1" FontWeight="Medium" Margin="10" Background="Transparent" BorderThickness="0"
                    Command="{Binding NavigateSettingsCommand}"></Button>
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding Navigation.CurrentView}">
            
        </ContentControl>
        
    </Grid>
</Window>
