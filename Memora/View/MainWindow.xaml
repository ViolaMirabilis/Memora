<Window x:Class="Memora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memora"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#6A5BFF">
    <Grid>
        <Border Height="65" Width="400" HorizontalAlignment="Center" VerticalAlignment="Top" CornerRadius="10" Background="#6A5BEF"></Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="65" Width="400">
            <Button Height="50" Width="75" Content="Home" FontSize="14" Margin="2" Background="Transparent" BorderThickness="0"></Button>
            <Button Height="50" Width="75" Content="Flashcards" FontSize="14" Margin="2" Background="Transparent" BorderThickness="0"></Button>
            <Button Height="50" Width="75" Content="Folders" FontSize="14" Margin="2" Background="Transparent" BorderThickness="0"></Button>
            <Button Height="50" Width="75" Content="Profile" FontSize="14" Margin="2" Background="Transparent" BorderThickness="0"></Button>
            <Button Height="50" Width="75" Content="Settings" FontSize="14" Margin="2" Background="Transparent" BorderThickness="0"></Button>
        </StackPanel>
        <Label Content="Main Window view" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontFamily="Calibri" Foreground="WhiteSmoke"></Label>
    </Grid>
</Window>
