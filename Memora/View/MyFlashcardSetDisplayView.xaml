<UserControl x:Class="Memora.View.MyFlashcardSetDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.9*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Content="Flashcard Sets"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="35"
               FontFamily="Sans Serif Collection"
               FontWeight="SemiBold"
               Foreground="#6366F1"></Label>

        <Border
            Grid.Row="1"
            Height="505"
            Width="805"
            BorderBrush="#DEE2E6"
            BorderThickness="2"
            CornerRadius="4"
            Background="#FFFFFF">

            <ListView
          x:Name="FlashcardSetList" 
          ItemsSource="{Binding FlashcardSets}"
          Background="Transparent"
          BorderThickness="0"
          Height="485"
          Width="785"
          Margin="15"
          ItemContainerStyle="{StaticResource FlashcardSetDesign}">

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

            </ListView>
        </Border>

    </Grid>
</UserControl>
