<UserControl x:Class="Memora.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Memora.View"
             mc:Ignorable="d">
    <Grid>
        <Label Content="Login view"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="48"
               FontFamily="Calibri"
               Foreground="WhiteSmoke"></Label>
        <Border Height="500"
            Width="400"
            CornerRadius="25"
            Background="#4A9EE8">

            <StackPanel Orientation="Vertical">
                <Label Content="Memora Register"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="FloralWhite"
                   HorizontalAlignment="Center"
                   Margin="10">
                </Label>

                <Label Content="Email"
               FontSize="20"
               FontWeight="Medium"
               Foreground="FloralWhite"
               HorizontalAlignment="Left"
               Margin="25,1,25,1">
                </Label>
                <TextBox Height="50"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"
                     FontSize="28"
                     FontWeight="Medium"
                     Foreground="Black"
                     BorderThickness="2"
                     BorderBrush="#81BBEF"
                     Margin="25,1,25,10">
                </TextBox>

                <Label Content="Password"
                   FontSize="20"
                   FontWeight="Medium"
                   Foreground="FloralWhite"
                   HorizontalAlignment="Left"
                   Margin="25,10,25,1">
                </Label>
                <TextBox Height="50"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center"
                         FontSize="28"
                         FontWeight="Medium"
                         Foreground="Black"
                         BorderThickness="2"
                         BorderBrush="#81BBEF"
                         Margin="25,1,25,1">
                </TextBox>

                <Label Content="Confirm password"
                       FontSize="20"
                       FontWeight="Medium"
                       Foreground="FloralWhite"
                       HorizontalAlignment="Left"
                       Margin="25,10,25,1">
                </Label>
                <TextBox Height="50"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center"
                         FontSize="28"
                         FontWeight="Medium"
                         Foreground="Black"
                         BorderThickness="2"
                         BorderBrush="#81BBEF"
                         Margin="25,1,25,1">
                </TextBox>


                <Button Content="Register"
                        Foreground="White"
                        FontSize="24"
                        FontWeight="Medium"
                        Margin="0,15,0,5"
                        Command="{Binding NavigateLoginCommand}">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="FontFamily" Value="Arial"/>
                            <Setter Property="Background" Value="#268BE3"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3895E5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="55"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>

                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>
