<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="FlashcardDataDesign">
        <Setter Property="Background" Value="#6366F1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border
                    Background="{TemplateBinding Background}"
                    Height="75"
                    Width="550"
                    CornerRadius="10"
                    Margin="10"
                    BorderBrush="#DEE2E6"
                    BorderThickness="1">
                        
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Border CornerRadius="10"
                                    Background="#4F46E5"
                                    Height="30"
                                    Width="200">
                                <TextBox Text="{Binding Front}"
                                     FontSize="16"
                                     Foreground="#FAFBFC"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     HorizontalContentAlignment="Center"
                                     VerticalContentAlignment="Center">
                                </TextBox>

                            </Border>
                            
                            <Label Content=" - "
                                   Foreground="#FAFBFC"
                                   FontSize="34"
                                   VerticalAlignment="Center"></Label>
                            <Border CornerRadius="10"
                                    Background="#4F46E5"
                                    Height="30"
                                    Width="200">
                                <TextBox Text="{Binding Back}"
                                         FontSize="16"
                                         Foreground="#FAFBFC"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center">
                                </TextBox>
                            </Border>
                            <Button Content="✏️" Margin="5,0,5,0" Height="30" Width="30"></Button>
                            <Button Content="❌" Margin="5,0,5,0" Height="30" Width="30"></Button>
                        </StackPanel>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>