<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="FlashcardDataDesign">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                    Height="25"
                    Width="400"
                    CornerRadius="4"
                    Margin="10"
                    BorderBrush="#DEE2E6"
                    BorderThickness="0.8">

                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding Front}" Width="100" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                            <Label Content=" - "></Label>
                            <TextBox Text="{Binding Back}" Width="100" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                            <Button Content="Edit" Margin="5,0,5,0"></Button>
                            <Button Content="Rename" Margin="5,0,5,0"></Button>
                        </StackPanel>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>