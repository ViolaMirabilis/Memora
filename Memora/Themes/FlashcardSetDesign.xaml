<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ListViewItem" x:Key="FlashcardSetDesign">
        
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <!-- On "IsSelected" background -->
                <Setter Property="Background" Value="#176BB5"/>
            </Trigger>
        </Style.Triggers>

        <!-- default background. The "general looks" is bound to this background-->
        <Setter Property="Background" Value="#1A76C7"/>
        
        <!-- general looks -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            Height="150"
                            Width="150"
                            CornerRadius="4"
                            Margin="10">

                        <StackPanel Orientation="Vertical"
                                    Margin="5">
                            <ToggleButton x:Name="FlashcardSetToggleButton"
                                          Height="20"
                                          Width="20"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          HorizontalAlignment="Right"
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          Cursor="Hand">
                                <StackPanel>
                                    <!-- three dots -->
                                    <TextBlock x:Name="ThreeDots"
                                       FontSize="15"
                                       Text="…"
                                       TextAlignment="Center"
                                       Background="Transparent"
                                       Foreground="White">
                                    </TextBlock>
                                    
                                    <!-- what appears after clicking the toggle button -->
                                    <!-- The Binding to IsOpen checks whether the toggle button is pressed or not-->
                                    <!-- @see https://learn.microsoft.com/en-us/dotnet/desktop/wpf/controls/popup-overview -->
                                    <Popup IsOpen="{Binding IsChecked, ElementName=FlashcardSetToggleButton}"
                                           StaysOpen="False"
                                           PlacementTarget="{Binding ElementName=FlashcardSetToggleButton}"
                                           Placement="Left"
                                           AllowsTransparency="True">
                                        <Border BorderThickness="2"
                                                CornerRadius="5"
                                                BorderBrush="Gray"
                                                Background="Gray">
                                            <StackPanel Orientation="Vertical"
                                                        Width="auto"
                                                        Height="auto">
                                                <Button x:Name="Rename"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Width="120"
                                                        Margin="5,5,5,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="✎" Margin="5,2,10,2" HorizontalAlignment="Left"/>
                                                        <TextBlock Text="Rename" Margin="5,2,5,2" HorizontalAlignment="Left"/>
                                                    </StackPanel>
                                                    
                                                    <!-- https://stackoverflow.com/questions/20073294/change-color-of-button-when-mouse-is-over-->
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}">
                                                            <Setter Property="Background" Value="CornflowerBlue"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                                        <Border Background="{TemplateBinding Background}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#1561A2"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <!-- temporarily duplicated. Will be made into a template later on.-->
                                                <Button x:Name="Delete"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="18"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Width="120"
                                                        Margin="5,0,5,5">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="🗑" Margin="5,2,10,2" HorizontalAlignment="Left" FontSize="14"/>
                                                        <TextBlock Text="Delete" Margin="5,2,5,2" HorizontalAlignment="Left"/>
                                                    </StackPanel>
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}">
                                                            <Setter Property="Background" Value="CornflowerBlue"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                                        <Border Background="{TemplateBinding Background}">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#1561A2"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </StackPanel>
                                


                            </ToggleButton>
                            <Label Content="{Binding Name}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0"/>
                            <Label Content="📄"
                                   Foreground="White"
                                   FontSize="60"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"></Label>

                        </StackPanel>
                        
                        
                    </Border>


                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
    
    
</ResourceDictionary>